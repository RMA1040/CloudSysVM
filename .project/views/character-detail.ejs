<%- include("partials/header") %>
    <h1><%= character.Names %></h1>
    <section>
        <article>
            <img src="<%= character.imageUrl %>" alt="Image of <%= character.Names %>" style="width:300px;">
            <p><strong>ID</strong><br><%= character.ID %></p>
            <p><strong>Age</strong><br><%= character.Age %></p>
            <p><strong>Birthday</strong><br><%= character.Birthday %></p>
            <p><strong>Alive</strong><br><%= character.isAlive ? 'Yes' : 'No' %></p>
            <p><strong>Description</strong><br><%= character.Description %></p>
            <p><strong>Abilities</strong><br><%= Array.isArray(character.abilities) ? character.abilities.join(', ') : '' %></p>
            <p><strong>Element</strong><br><%= character.Elements %></p>
            <p><strong>Weapon</strong><br><a href="/weapons-detail/<%= character.Weapons.weapon_id %>"><%= character.Weapons.weapon_name %></a></p>
            <a href="/characters/<%= character.ID %>/update" style="display:inline;">
                <button type="button">Update</button>
            </a>
            <form action="/characters/<%= character.ID %>/delete" method="post" style="display:inline;">
                <button type="submit">Delete</button>
            </form>
        </article>
    </section>
    <%- include("partials/footer") %>
